# Claude model is locked by PRD/build-spec decision.
MICROCLAW_MODEL=claude-sonnet-4-5

# Workspace root for file/system tools.
MICROCLAW_WORKSPACE=/Users/mg/workspace

# Session map persistence (conversation_key -> claude_session_id)
MICROCLAW_SESSION_STORE_PATH=/Users/mg/workspace/microclaw/data/sessions.json

# Tool configuration
MICROCLAW_EXEC_TIMEOUT_SEC=60
MICROCLAW_WEB_SEARCH_API_KEY=

# Telegram channel
MICROCLAW_TELEGRAM_ENABLED=false
MICROCLAW_TELEGRAM_TOKEN=
MICROCLAW_TELEGRAM_ALLOW_FROM=

# Discord channel
MICROCLAW_DISCORD_ENABLED=false
MICROCLAW_DISCORD_TOKEN=
MICROCLAW_DISCORD_ALLOW_FROM=

# Optional: tuning
MICROCLAW_MAX_TOOL_ITERATIONS=20
